
<div class="jumbotron">
    <h1 class="display-4">Eat-Da-Burger</h1>
</div>


<div class="container">
    <div class="row my-2">
        <div class="col-md-6">
            <h2>MMMMmmmm Burgers</h2>
                <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
                </ul>
        </div>
   
         <div class="col-md-6">
            <h2>Devoured Burgers</h2>
                <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    {{> burger-block devoured=false}}
                    {{/if}}
                {{/each}}
                </ul>
        </div>
    </div>
   
            <h4>Add a Burger!</h4>
            <form class="create-form">
                <div class="form-group">
                        <input class="form-control" type="text" id="burger" name="name">
                </div>
                <button class="btn-primary" type="submit">Add Burger</button>
            </form>
    
</div>
