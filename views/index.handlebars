
<div class="jumbotron">
    <h1 class="display-4">Eat-Da-Burger!</h1>
</div>


<div class="container">
    <div class="row my-2">
        <div class="col-md-6">
            <h2>Mmmmmm... burgers</h2>
                
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
                
        </div>
   
         <div class="col-md-6">
            <h2>Devoured</h2>
               
                {{#each burgers}}
                    {{#if devoured}}
                    {{> burger-block devoured=false}}
                    {{/if}}
                {{/each}}
                
        </div>
    </div>
<div class="row">
    <div class="col-md-12">
        <form class="create-form">
                <div class="form-group">
                        <input class="form-control" type="text" id="burger" name="name">
                </div>
            <button class="btn-success btn-sm" type="submit">Add Burger</button>
        </form>
         <h5>Enter a burger you would like to eat and click the "Add Burger" button.</h5>
    </div>
</div>
</div>

  <footer class="footer fixed-bottom">
      <h6>Made with &hearts;</h6>
    </footer>
